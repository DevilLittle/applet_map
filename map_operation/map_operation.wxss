.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}

.page-body-button {
  margin-bottom: 20rpx;
}

.center-point {
    height: 30px;
    width: 30px;
    position: relative;
    top: calc(50% - 15px);
    left: 50%;
    transform: translate(-50%, -50%);
}

.input-info {
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    width: 85%;
    height: 40px;
    line-height: 40px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    padding: 0px 15px;
    color: #999;
}

.input-info .hide {
    position: relative;
    color: black;
    top: 8px;
}

.select-info {
    position: relative;
    left: 50%;
    top: 10px;
    transform: translateX(-50%);
    width: 85%;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    padding: 0px 15px;
    color: #999;
}

.select-info .selected {
    line-height: 40px;
}

.select-info .select-list {
    overflow-y: scroll;
    max-height: 120px;
}

.select-info .select-list .select-item .item {
    line-height: 30px;
}

.select-info .select-cancel {
    height: 40px;
    line-height: 40px;
    color: rgb(26, 173, 25);
    text-align: center;
}